<Window x:Class="CMP307.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMP307"
        mc:Ignorable="d"
        Title="ScottishGlen Network Asset Registry" Height="450" Width="800" MinWidth="800" MinHeight="350">
    <Grid>
        <Menu VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,10,0,0" Height="40" Width="270">
            <MenuItem Header="Employees" Click="EmployeesMenuItem_Click" Width="90" Height="40"/>
            <MenuItem Header="Hardware" Click="HardwareMenuItem_Click" Width="90" Height="40"/>
            <MenuItem Header="Departments" Click="DepartmentsMenuItem_Click" x:Name="DepartmentsMenuItem" Width="90" Height="40" MouseEnter="DepartmentsMenuItem_MouseEnter">
                <!-- Submenu items will be added dynamically -->
            </MenuItem>
        </Menu>
        <DataGrid x:Name="MainDataGrid" Margin="10,60,10,10"/>
    </Grid>
</Window>
